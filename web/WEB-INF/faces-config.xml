<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>MainBundle</base-name>
            <var>mainBundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/Resources/DvdBundle</base-name>
            <var>dvdBundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>StockBundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/resource/OrderlinesBundle</base-name>
            <var>bundle</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <managed-bean-name>shopManager</managed-bean-name>
        <managed-bean-class>jsf.ShopManager</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>loginBean</managed-bean-name>
        <managed-bean-class>jsf.LoginBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <navigation-rule>
        <from-view-id>login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.login}</from-action>
            <from-outcome>shop</from-outcome>
            <to-view-id>/dvds/Shop.xhtml</to-view-id>
        </navigation-case>	
        <navigation-case>
            <from-action>#{usersController.prepareCreate}</from-action>
            <from-outcome>Create</from-outcome>
            <to-view-id>/users/Create.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>	
    
    <navigation-rule>          
        <navigation-case>
            <from-action>#{loginBean.logout}</from-action>
            <from-outcome>login</from-outcome>
            <to-view-id>login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>shopManagerBean</managed-bean-name>
        <managed-bean-class>jsf.ShopManagerBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/dvds/Shop.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{shopManagerBean.addToCart}</from-action>
            <from-outcome>shop</from-outcome>
            <to-view-id>/dvds/Shop.xhtml</to-view-id>
        </navigation-case>      
    </navigation-rule>	
</faces-config>
